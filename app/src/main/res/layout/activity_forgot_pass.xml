<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgm3"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPassActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="124dp"
        android:layout_height="179dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/tastyfoods_app_icon_edited"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txtEnterDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:text="Enter the details if you forgot your password: "
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="205dp" />

    <EditText
        android:id="@+id/etMobileNo"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtEnterDetails"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:drawableLeft="@drawable/ic_mobile"
        android:hint="Mobile No(10 digits)"
        android:inputType="phone"
        android:maxLength="10"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="259dp" />

    <EditText
        android:id="@+id/etEmailAdd"
        android:layout_centerHorizontal="true"
        android:layout_width="294dp"
        android:layout_height="46dp"
        android:layout_below="@id/etMobileNo"
        android:layout_marginTop="29dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="email address"
        android:drawableLeft="@drawable/ic_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="342dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmailAdd"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorAccent"
        android:text="NEXT"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="431dp" />
</RelativeLayout>